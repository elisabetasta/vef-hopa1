  "bugs": {
    "url": "https://github.com/elisabetasta/vef-hopa1/issues"
  },
  "homepage": "https://github.com/elisabetasta/vef-hopa1#readme",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "concurrently": "^7.5.0",
    "cpy-cli": "^4.2.0",
    "lint": "^1.1.2",
    "sass": "^1.55.0",
    "stylelint": "^14.14.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^28.0.0"
